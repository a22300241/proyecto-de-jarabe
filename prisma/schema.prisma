generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  OWNER
  PARTNER
  FRANCHISE_OWNER
  SELLER
}

model Franchise {
  id        String   @id @default(uuid())
  name      String
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())

  users     User[]
  products  Product[]
  sales     Sale[]
  chatRooms ChatRoom[]
}

model User {
  id           String   @id @default(uuid())
  email        String   @unique
  name         String
  passwordHash String
  role         Role
  createdAt    DateTime @default(now())

  franchiseId String?
  franchise   Franchise? @relation(fields: [franchiseId], references: [id])

  sales        Sale[]
  sentMessages ChatMessage[]
}

model Product {
  id          String    @id @default(uuid())
  franchiseId String
  franchise   Franchise @relation(fields: [franchiseId], references: [id])

  isActive Boolean @default(true)
  name     String
  sku      String?
  price    Int     // centavos
  stock    Int     @default(0)
  missing  Int     @default(0)

  createdAt DateTime @default(now())

  saleItems SaleItem[]

  @@index([franchiseId])
}

model Sale {
  id          String    @id @default(uuid())
  franchiseId String
  franchise   Franchise @relation(fields: [franchiseId], references: [id])

  sellerId String
  seller   User @relation(fields: [sellerId], references: [id])

  cardNumber String?
  total      Int
  createdAt  DateTime @default(now())

  items SaleItem[]

  @@index([franchiseId, createdAt])
}

model SaleItem {
  id     String @id @default(uuid())
  saleId String
  sale   Sale   @relation(fields: [saleId], references: [id], onDelete: Cascade)

  productId String
  product   Product @relation(fields: [productId], references: [id])

  qty      Int
  price    Int
  subtotal Int

  @@index([saleId])
  @@index([productId])
}

model ChatRoom {
  id          String     @id @default(uuid())
  type        String     // "FRANCHISE" o "GLOBAL"
  franchiseId String?
  franchise   Franchise? @relation(fields: [franchiseId], references: [id])

  createdAt DateTime      @default(now())
  messages  ChatMessage[]
}

model ChatMessage {
  id     String   @id @default(uuid())
  roomId String
  room   ChatRoom @relation(fields: [roomId], references: [id], onDelete: Cascade)

  senderId String
  sender   User @relation(fields: [senderId], references: [id])

  text      String
  createdAt DateTime @default(now())
}
