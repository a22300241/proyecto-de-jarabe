generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  OWNER
  PARTNER
  FRANCHISE_OWNER
  SELLER
}

model Franchise {
  id        String   @id @default(uuid())
  name      String
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())

  users     User[]
  products  Product[]
  sales     Sale[]
  chatRooms ChatRoom[]

  @@index([isActive])
}

model User {
  id           String     @id @default(uuid())
  email        String     @unique
  name         String
  passwordHash String
  role         Role
  createdAt    DateTime   @default(now())
  isActive     Boolean    @default(true)
  deletedAt    DateTime?
  franchiseId  String?
  franchise    Franchise? @relation(fields: [franchiseId], references: [id])

  sales           Sale[]
  sentMessages    ChatMessage[]
  chatRoomMembers ChatRoomMember[]

  refreshTokens RefreshToken[]

  @@index([role])
  @@index([franchiseId])
}

model Product {
  id          String    @id @default(uuid())
  franchiseId String
  franchise   Franchise @relation(fields: [franchiseId], references: [id])

  isActive Boolean @default(true)
  name     String
  sku      String?
  price    Int // centavos
  stock    Int     @default(0)
  missing  Int     @default(0)

  createdAt DateTime @default(now())

  saleItems SaleItem[]

  @@index([franchiseId])
  @@index([franchiseId, isActive])
  @@index([sku])
  @@index([name])
}

enum SaleStatus {
  COMPLETED
  CANCELED
  REFUNDED
}

model Sale {
  id          String    @id @default(uuid())
  franchiseId String
  franchise   Franchise @relation(fields: [franchiseId], references: [id])

  sellerId String
  seller   User   @relation(fields: [sellerId], references: [id])

  cardNumber String?
  total      Int
  createdAt  DateTime @default(now())

  items SaleItem[]

  status SaleStatus @default(COMPLETED)

  canceledAt     DateTime?
  canceledReason String?
  canceledById   String?

  refundedAt     DateTime?
  refundedReason String?
  refundedById   String?
  refundTotal    Int?

  @@index([franchiseId, createdAt])
  @@index([sellerId, createdAt])
  @@index([status])
}

model SaleItem {
  id     String @id @default(uuid())
  saleId String
  sale   Sale   @relation(fields: [saleId], references: [id], onDelete: Cascade)

  productId String
  product   Product @relation(fields: [productId], references: [id])

  qty      Int
  price    Int
  subtotal Int

  @@index([saleId])
  @@index([productId])
}

model DailyClose {
  id          String   @id @default(uuid())
  franchiseId String
  day         DateTime // día a las 00:00:00
  closedAt    DateTime @default(now())
  closedById  String

  @@unique([franchiseId, day])
  @@index([day])
  @@index([franchiseId])
}

model RefreshToken {
  id     String @id @default(uuid())
  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  tokenHash String
  expiresAt DateTime
  revokedAt DateTime?
  createdAt DateTime  @default(now())

  @@index([userId])
  @@index([expiresAt])
}

model AuditLog {
  id          String   @id @default(uuid())
  action      String
  entity      String
  entityId    String?
  franchiseId String?
  userId      String?
  role        Role?
  payload     Json?
  createdAt   DateTime @default(now())

  @@index([franchiseId, createdAt])
  @@index([userId, createdAt])
  @@index([action])
}

/**
 * =========================
 * CHAT (CORREGIDO)
 * - 1 sala FRANCHISE por franquicia
 * - 1 sala GLOBAL única
 * - DM por pareja (A,B ordenado)
 * =========================
 */

/**
 * =========================
 * CHAT (FINAL)
 * =========================
 */
enum ChatRoomType {
  FRANCHISE
  GLOBAL
  DM
}

model ChatRoom {
  id   String       @id @default(uuid())
  type ChatRoomType

  // FRANCHISE
  franchiseId String?
  franchise   Franchise? @relation(fields: [franchiseId], references: [id])

  // DM (par único ordenado)
  dmUserAId String?
  dmUserBId String?

  createdAt DateTime @default(now())

  messages ChatMessage[]
  members  ChatRoomMember[]

  @@unique([type, franchiseId])
  @@unique([type])
  @@unique([dmUserAId, dmUserBId])
  @@index([franchiseId])
  @@index([type])
}

model ChatRoomMember {
  id       String   @id @default(uuid())
  roomId   String
  userId   String
  joinedAt DateTime @default(now())

  room ChatRoom @relation(fields: [roomId], references: [id], onDelete: Cascade)
  user User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([roomId, userId])
  @@index([userId])
  @@index([roomId])
}

model ChatMessage {
  id     String   @id @default(uuid())
  roomId String
  room   ChatRoom @relation(fields: [roomId], references: [id], onDelete: Cascade)

  senderId String
  sender   User   @relation(fields: [senderId], references: [id])

  text      String
  createdAt DateTime @default(now())

  @@index([roomId, createdAt])
  @@index([senderId, createdAt])
}
